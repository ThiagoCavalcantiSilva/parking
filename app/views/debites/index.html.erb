<h1 class="title-parking">Parking System</h1>
<h1 class="title-debitos">Debitos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Valor</th>
      <th>Motivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debites.each do |debite| %>
      <tr>
        <td><%= debite.user.email %></td>
        <td><%= debite.valor %></td>
        <td><%= debite.motivo %></td>
        <td><%= link_to 'Show', debite %></td>
        <td><%= link_to 'Destroy', debite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

